<Window x:Class="WpfApp1.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="800" Width="900" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#1E0B36">

    <Window.Resources>
        <local:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0D6ED"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#4B2A7E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#7E57C2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="15,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5E35B1"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#311B92"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D1B4E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#7E57C2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>

        <Style x:Key="PlaceholderStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,10"/>
            <Style.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#A0A0A0"/>
                    <Setter Property="FontStyle" Value="Italic"/>
                    <Setter Property="Margin" Value="12,0"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#4A148C" Padding="30">
            <TextBlock Text="Оплата бронирования" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="White"/>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="35" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="#2D1B4E" CornerRadius="8" Padding="30" Margin="0,0,0,35">
                    <StackPanel>
                        <TextBlock Text="Детали заказа:" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,20"
                                   Foreground="#B388FF"/>

                        <TextBlock x:Name="OrderDetails" 
                                   TextWrapping="Wrap" 
                                   FontSize="20"
                                   Text="{Binding ItemDetails}"/>

                        <TextBlock Text="{Binding TotalPrice, StringFormat='Итого: {0} руб.'}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Margin="0,20,0,0"
                                   Foreground="#B388FF"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Данные карты:" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,20,0,15"
                           Foreground="#B388FF"/>

                <Grid Style="{StaticResource PlaceholderStyle}">
                    <TextBox x:Name="CardNumber" MaxLength="19" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBlock Text="Номер карты" 
                              Visibility="{Binding ElementName=CardNumber, Path=Text, 
                                       Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,15">
                    <TextBlock Text="Срок действия:" 
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"
                               FontSize="18"/>
                    <Grid Style="{StaticResource PlaceholderStyle}">
                        <TextBox x:Name="CardMonth" Width="80" MaxLength="2" 
                                PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="ММ" 
                                  Visibility="{Binding ElementName=CardMonth, Path=Text, 
                                           Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                    </Grid>
                    <TextBlock Text="/" 
                               VerticalAlignment="Center" 
                               Margin="12,0,12,0"
                               FontSize="18"/>
                    <Grid Style="{StaticResource PlaceholderStyle}">
                        <TextBox x:Name="CardYear" Width="80" MaxLength="2" 
                                PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="ГГ" 
                                  Visibility="{Binding ElementName=CardYear, Path=Text, 
                                           Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,15">
                    <Grid Style="{StaticResource PlaceholderStyle}">
                        <TextBox x:Name="CardCvv" Width="120" MaxLength="3" 
                                PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="CVV/CVC" 
                                  Visibility="{Binding ElementName=CardCvv, Path=Text, 
                                           Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                    </Grid>
                    <Grid Style="{StaticResource PlaceholderStyle}" Margin="20,0,0,0">
                        <TextBox x:Name="CardName" Width="400" Height="50"/>
                        <TextBlock Text="Имя владельца карты" 
                                  Visibility="{Binding ElementName=CardName, Path=Text, 
                                           Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#1A0B30" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PayButton" 
                Content="Оплатить картой" 
                Width="200" 
                Height="60"
                FontSize="20"
                Click="PayButton_Click"/>

                <Button x:Name="PayCashButton"
                Content="Оплатить наличными"
                Width="200"
                Height="60"
                FontSize="20"
                Click="PayCashButton_Click"
                Background="#5E35B1"
                Margin="20,0"/>

                <Button x:Name="CancelButton" 
                Content="Отмена" 
                Width="200" 
                Height="60"
                FontSize="20"
                Click="CancelButton_Click"
                Background="Transparent"
                BorderBrush="#7E57C2"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>