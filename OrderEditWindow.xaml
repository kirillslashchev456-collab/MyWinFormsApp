<Window x:Class="WpfApp1.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Фиолетовые стили -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#6A0DAD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#9B51E0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0D0FF"/>
            <Setter Property="Margin" Value="0,0,10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#4B0082"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#9B51E0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="WhiteComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#9B51E0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#9B51E0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Border Background="#2D004D" 
            CornerRadius="10"
            BorderBrush="#9B51E0"
            BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="{Binding WindowTitle}" 
                       Grid.Row="0"
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#D9B3FF"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Форма -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Тариф -->
                <TextBlock Text="Тариф:" Grid.Row="0" Grid.Column="0"/>
                <ComboBox x:Name="cmbTariff" Grid.Row="0" Grid.Column="1"
                          Style="{StaticResource WhiteComboBoxStyle}"
                          DisplayMemberPath="Название_Тарифа"
                          SelectedValuePath="ID_Тарифа"
                          SelectedValue="{Binding SelectedTariffId}"/>

                <!-- Комната -->
                <TextBlock Text="Комната:" Grid.Row="1" Grid.Column="0"/>
                <ComboBox x:Name="cmbRoom" Grid.Row="1" Grid.Column="1"
                          Style="{StaticResource WhiteComboBoxStyle}"
                          DisplayMemberPath="Номер_Комнаты"
                          SelectedValuePath="ID_Комнаты"
                          SelectedValue="{Binding SelectedRoomId}"/>

                <!-- Дата -->
                <TextBlock Text="Дата:" Grid.Row="2" Grid.Column="0"/>
                <DatePicker x:Name="dpDate" Grid.Row="2" Grid.Column="1"
                            SelectedDate="{Binding SelectedDate}"/>

                <!-- Время -->
                <TextBlock Text="Время:" Grid.Row="3" Grid.Column="0"/>
                <ComboBox x:Name="cmbTime" Grid.Row="3" Grid.Column="1"
                          Style="{StaticResource WhiteComboBoxStyle}"
                          DisplayMemberPath="Время_начала"
                          SelectedValuePath="ID_Времени"
                          SelectedValue="{Binding SelectedTimeId}"/>

                <!-- Имя клиента -->
                <TextBlock Text="Имя клиента:" Grid.Row="4" Grid.Column="0"/>
                <TextBox x:Name="txtFirstName" Grid.Row="4" Grid.Column="1"
                         Text="{Binding FirstName}"/>

                <!-- Фамилия клиента -->
                <TextBlock Text="Фамилия клиента:" Grid.Row="5" Grid.Column="0"/>
                <TextBox x:Name="txtLastName" Grid.Row="5" Grid.Column="1"
                         Text="{Binding LastName}"/>

                <!-- Стоимость -->
                <TextBlock Text="Стоимость:" Grid.Row="6" Grid.Column="0"/>
                <TextBox x:Name="txtPrice" Grid.Row="6" Grid.Column="1"
                         Text="{Binding Price, StringFormat={}{0} руб.}" 
                         IsReadOnly="True"
                         Background="#3D0066"/>
            </Grid>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Width="120" Height="40" Margin="0,0,10,0" 
                        Click="BtnSave_Click" Background="#8A2BE2"/>
                <Button Content="Отмена" Width="120" Height="40" 
                        Click="BtnCancel_Click" Background="#9932CC"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>