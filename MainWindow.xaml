<Window x:Class="kibers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kibers"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="740"
        Width="1220"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="103*"/>
        </Grid.RowDefinitions>


        <!--// Background //-->

        <Border Background="#1C1D31"
                CornerRadius="25" Grid.RowSpan="2" />

        <!--// Main Grid //-->

        <Grid Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="140" />
                <RowDefinition Height="360" />
                <RowDefinition Height="170" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <!--// Panel 1 //-->

            <Border Grid.Row="1"  
        Grid.Column="1"  
        CornerRadius="20"  
        Margin="20">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0.75,9" EndPoint="0,1">
                        <GradientStop Color="#df208f" Offset="0.1" />
                        <GradientStop Color="#dfcf20" Offset="0.8"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Border Background="#ffffff"  
                Height="200"  
                Width="180"  
                HorizontalAlignment="Left"  
                VerticalAlignment="Top"  
                CornerRadius="20"  
                
                Margin="10,10,0,0">
                        <Image Source="Assets/yeelow.jpg" Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>


            <!--Panel 2-->
            <Border Grid.Row="1"
         Grid.Column="2"
         CornerRadius="20"
         Margin="20">

                <Border.Background>

                    <LinearGradientBrush StartPoint="0.75,9"
                              EndPoint="0,1">
                        <GradientStop Color="#27bde9"
                           Offset="0.1" />
                        <GradientStop Color="#abdb54"
   Offset="0.8"/>
                    </LinearGradientBrush>


                </Border.Background>

                <Grid>
                    <Border Background="#ffffff"  
    Height="200"  
    Width="180"  
    HorizontalAlignment="Left"  
    VerticalAlignment="Top"  
    CornerRadius="20"  
    
    Margin="10,10,0,0">
                        <Image Source="Assets/green.jpg" Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>



            <!--//Panel 3//-->
            <Border Grid.Row="1"
      Grid.Column="3"
      CornerRadius="20"
      Margin="20">

                <Border.Background>

                    <LinearGradientBrush StartPoint="0.75,9"
                           EndPoint="0,1">
                        <GradientStop Color="#f96100"
                        Offset="0.1" />
                        <GradientStop Color="#e70b75"
Offset="0.8"/>
                    </LinearGradientBrush>


                </Border.Background>

                <Grid>
                    <Border Background="#ffffff"  
Height="200"  
Width="180"  
HorizontalAlignment="Left"  
VerticalAlignment="Top"  
CornerRadius="20"  

Margin="10,10,0,0">
                        <Image Source="Assets/pink.jpg" Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>


            <!--//Panel 4//-->
            <Border Grid.Row="1"
      Grid.Column="4"
      CornerRadius="20"
      Margin="20">

                <Border.Background>

                    <LinearGradientBrush StartPoint="0.75,9"
                           EndPoint="0,1">
                        <GradientStop Color="#06a4fb"
                        Offset="0.1" />
                        <GradientStop Color="#b84eeb"
Offset="0.8"/>
                    </LinearGradientBrush>


                </Border.Background>

                <Grid>
                    <Border Background="#ffffff"  
Height="200"  
Width="180"  
HorizontalAlignment="Left"  
VerticalAlignment="Top"  
CornerRadius="20"  

Margin="10,10,0,0">
                        <Image Source="Assets/fioletov.jpg" Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>

            <!--// Header //-->

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Grid.ColumnSpan="2"
                       Text="K I B E R S  L O U N G E  P R O"
                       Foreground="#CDD7E0"
                       FontFamily="Oswald"
                       FontSize="36"
                       Margin="20,50,0,0" />

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Grid.ColumnSpan="2"
                       Text="c o m p u t e r  c l u b"
                       Foreground="#A6B8C8"
                       FontFamily="Roboto"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="0,0,242,31" />

            <!--// Footer //-->

            <Border Grid.Row="3"
                    Grid.ColumnSpan="6"
                    CornerRadius="0,0,20,20">

                <Border.Background>

                    <LinearGradientBrush StartPoint="0.75,0"
                                         EndPoint="0,1">

                        <GradientStop Color="#DF208F"
                                      Offset="0.1" />

                        <GradientStop Color="#DFCF20"
                                      Offset="0.8" />

                    </LinearGradientBrush>

                </Border.Background>

            </Border>

            <!--// Dock Bar //-->

            <Grid Grid.Row="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="4">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="740" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1"
                        Background="#323345"
                        CornerRadius="10,10,0,0"
                        Margin="0,85,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="44" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="220" />


                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>



                        <!--// registration //-->

                        <Button Grid.Column="1"
                                x:Name="registration"
                                Style="{StaticResource DockBtnStyle}" Click="registration_Click">

                            <Button.Background>

                                <ImageBrush ImageSource="Assets/registration.png"
                                            Stretch="Uniform" />

                            </Button.Background>

                            <Popup Width="95"
                                   HorizontalOffset="-6"
                                   PlacementTarget="{Binding ElementName=registration}"
                                   IsOpen="{Binding ElementName=registration, Path=IsMouseOver, Mode=OneWay}"
                                   Style="{StaticResource PopupStyle}">

                                <Grid>

                                    <Border Style="{StaticResource border}">

                                        <TextBlock Text="Регистрация"
                                                   Style="{StaticResource PopupText}" />

                                    </Border>

                                    <Path Style="{StaticResource ArrowPath}" />

                                </Grid>

                            </Popup>

                        </Button>

                        <!--// spravka //-->

                        <Button Grid.Column="2"
                                x:Name="spravka"
                                Style="{StaticResource DockBtnStyle}" Click="spravka_Click">

                            <Button.Background>

                                <ImageBrush ImageSource="Assets/spravka.png"
                                            Stretch="Uniform" />

                            </Button.Background>

                            <Popup Width="118"
                                   HorizontalOffset="-35"
                                   PlacementTarget="{Binding ElementName=spravka}"
                                   IsOpen="{Binding ElementName=spravka, Path=IsMouseOver, Mode=OneWay}"
                                   Style="{StaticResource PopupStyle}">

                                <Grid>

                                    <Border Style="{StaticResource border}">

                                        <TextBlock Text="О нас"
                                                   Style="{StaticResource PopupText}" />

                                    </Border>

                                    <Path Style="{StaticResource ArrowPath}" />

                                </Grid>

                            </Popup>

                        </Button>

                        <!--// prise //-->

                        <Button Grid.Column="3"
                                x:Name="prise"
                                Style="{StaticResource DockBtnStyle}" Click="prise_Click">

                            <Button.Background>

                                <ImageBrush ImageSource="Assets/prise.png"
                                            Stretch="Uniform" />

                            </Button.Background>

                            <Popup Width="85"
                                   HorizontalOffset="-19"
                                   PlacementTarget="{Binding ElementName=prise}"
                                   IsOpen="{Binding ElementName=prise, Path=IsMouseOver, Mode=OneWay}"
                                   Style="{StaticResource PopupStyle}">

                                <Grid>

                                    <Border Style="{StaticResource border}">

                                        <TextBlock Text="Прайс"
                                                   Style="{StaticResource PopupText}" />

                                    </Border>

                                    <Path Style="{StaticResource ArrowPath}" />

                                </Grid>

                            </Popup>

                        </Button>


                    </Grid>

                </Border>

            </Grid>

        </Grid>




        <!--// Exit Button //-->

        <Button x:Name="ExitBtn"
                Style="{StaticResource CloseBtnStyle}"
                Click="ExitBtn_Click" />

    </Grid>
</Window>
    
