<Window x:Class="WpfApp1.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Бронирование" Height="800" Width="1300" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="DeepPurple" Color="#1A0036"/>
        <SolidColorBrush x:Key="MediumPurple" Color="#2D0D42"/>
        <SolidColorBrush x:Key="LightPurple" Color="#3A1A5A"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#6A0DAD"/>
        <SolidColorBrush x:Key="HighlightPurple" Color="#8E44AD"/>
        <SolidColorBrush x:Key="TextColor" Color="#E0D6ED"/>
        <SolidColorBrush x:Key="DisabledText" Color="#7A6B8A"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A148C"/>
        <SolidColorBrush x:Key="SelectionColor" Color="#512DA8"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightPurple}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{StaticResource DisabledText}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Main Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPurple}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HighlightPurple}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.5" Color="#8E44AD"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource MediumPurple}"/>
                    <Setter Property="Foreground" Value="{StaticResource DisabledText}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource MediumPurple}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SelectionColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightPurple}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource MediumPurple}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource MediumPurple}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource LightPurple}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="RowHeight" Value="40"/>
        </Style>

        <!-- DataGridCell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SelectionColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGridColumnHeader Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource LightPurple}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Calendar Style -->
        <Style TargetType="Calendar">
            <Setter Property="Background" Value="{StaticResource MediumPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <!-- Изменено на белый цвет -->
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- CalendarDayButton Style -->
        <Style TargetType="CalendarDayButton">
            <Setter Property="Foreground" Value="White"/>
            <!-- Изменено на белый цвет -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarDayButton">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Background" 
                                                    Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                    To="{StaticResource LightPurple}"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Background" 
                                                    Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                    To="{StaticResource AccentPurple}"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected"/>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Background" 
                                                    Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                    To="{StaticResource SelectionColor}"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="Background" Fill="Transparent"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CalendarItem Style (month view) -->
        <Style TargetType="CalendarItem">
            <Setter Property="Foreground" Value="White"/>
            <!-- Изменено на белый цвет -->
            <Setter Property="Background" Value="{StaticResource MediumPurple}"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource MediumPurple}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource DeepPurple}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Navigation and Cart -->
        <Border Grid.Column="0" Background="{StaticResource MediumPurple}" CornerRadius="0,0,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="25,25,25,15">
                    <TextBlock Text="Бронирование" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextColor}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Выберите параметры бронирования" 
                               FontSize="18" 
                               Foreground="{StaticResource TextColor}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0" Opacity="0.8"/>
                </StackPanel>

                <!-- Client Info -->
                <StackPanel Grid.Row="1" Margin="25,0,25,15">
                    <Label Content="Данные клиента" FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}" FontSize="20"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <StackPanel Margin="0,0,15,0" Width="160">
                            <Label Content="Имя:"/>
                            <TextBox x:Name="txtFirstName" FontSize="16" 
                                     Background="{StaticResource MediumPurple}" 
                                     Foreground="{StaticResource TextColor}"
                                     BorderBrush="{StaticResource BorderColor}"
                                     Height="35"/>
                        </StackPanel>
                        <StackPanel Width="160">
                            <Label Content="Фамилия:"/>
                            <TextBox x:Name="txtLastName" FontSize="16"
                                     Background="{StaticResource MediumPurple}" 
                                     Foreground="{StaticResource TextColor}"
                                     BorderBrush="{StaticResource BorderColor}"
                                     Height="35"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Buttons -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="15,0,15,0">
                    <StackPanel>
                        <Button x:Name="btnTariffs" Content="Тарифы" Click="BtnTariffs_Click"
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="btnRooms" Content="Комнаты" Click="BtnRooms_Click"
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="btnTime" Content="Время" Click="BtnTime_Click" IsEnabled="False"
                                Style="{StaticResource NavButtonStyle}"/>
                        <Button x:Name="btnServices" Content="Доп. услуги" Click="BtnServices_Click"
                                Style="{StaticResource NavButtonStyle}"/>

                        <!-- Divider -->
                        <Border Height="1" Background="{StaticResource BorderColor}" Margin="20,25" Opacity="0.5"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Cart -->
                <StackPanel Grid.Row="3" Margin="15,0,15,0">
                    <Label Content="Ваша корзина" FontWeight="Bold" Margin="15,0,15,10"
                           Foreground="{StaticResource TextColor}" FontSize="20"/>
                    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="10" Margin="15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                            <ListBox x:Name="lstCart" Background="{StaticResource LightPurple}"
                                     Foreground="{StaticResource TextColor}" 
                                     SelectionChanged="lstCart_SelectionChanged"
                                     FontSize="16"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Total -->
                <TextBlock Grid.Row="4" x:Name="txtTotal" Text="Итого: 0 руб." 
                           FontWeight="Bold" 
                           FontSize="20"
                           Margin="15,10,15,15" 
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource TextColor}"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="5" Margin="25,0,25,25">
                    <Button Content="Оформить бронь" Click="BtnCheckout_Click" 
                            FontSize="20" Padding="30,15"/>
                    <Button Content="Выход" Click="BtnExit_Click" Margin="0,15,0,0"
                            Background="Transparent" 
                            Foreground="{StaticResource TextColor}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            FontSize="18"
                            Padding="30,10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel - Content -->
        <Grid Grid.Column="1" Margin="15">
            <!-- Tariffs View -->
            <StackPanel x:Name="pnlTariffs" Visibility="Visible">
                <Label Content="Выберите тариф" FontSize="24" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                    <Button Content="Самый дешевый" Click="BtnSortCheapest_Click" Margin="5" Padding="15,5"/>
                    <Button Content="Средний" Click="BtnSortMedium_Click" Margin="5" Padding="15,5"/>
                    <Button Content="Самый дорогой" Click="BtnSortExpensive_Click" Margin="5" Padding="15,5"/>
                </StackPanel>
                <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="10">
                    <ListBox x:Name="lstTariffs" SelectionMode="Single" 
                 SelectionChanged="LstTariffs_SelectionChanged" Height="450"/>
                </Border>
                <Button Content="Добавить тариф в корзину" Click="BtnAddTariff_Click" 
            Margin="15,25" HorizontalAlignment="Center" FontSize="18"/>
            </StackPanel>


            <!-- Rooms View -->
            <StackPanel x:Name="pnlRooms" Visibility="Collapsed">
                <Label Content="Выберите комнату" FontSize="24" FontWeight="Bold"/>
                <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="10">
                    <DataGrid x:Name="dgRooms" AutoGenerateColumns="False" 
                              SelectionChanged="DgRooms_SelectionChanged" Height="450">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер" Binding="{Binding Номер_Комнаты}" Width="120"/>
                            <DataGridTextColumn Header="Вместимость" Binding="{Binding Вместимость}" Width="120"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Статус}" Width="150"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Описание}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button Content="Добавить комнату в корзину" Click="BtnAddRoom_Click" 
                            Margin="15,15" Padding="25,15" FontSize="18"/>
                    <Button Content="Посмотреть комнаты" Click="BtnViewRooms_Click" 
                            Margin="15,15" Padding="25,15" FontSize="18"/>
                </StackPanel>
            </StackPanel>

            <!-- Time View -->
            <StackPanel x:Name="pnlTime" Visibility="Collapsed">
                <Label Content="Выберите дату и время" FontSize="24" FontWeight="Bold"/>
                <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <Calendar x:Name="calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged"
                                  FontSize="16"/>

                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0" HorizontalAlignment="Center">
                            <StackPanel Margin="0,0,25,0">
                                <Label Content="Доступное время:"/>
                                <ComboBox x:Name="cmbTime" DisplayMemberPath="Время_начала" Width="300" FontSize="16"/>
                            </StackPanel>

                            <StackPanel>
                                <Label Content="Продолжительность (часы):"/>
                                <ComboBox x:Name="cmbDuration" SelectedIndex="0" Width="300" FontSize="16">
                                    <ComboBoxItem>1</ComboBoxItem>
                                    <ComboBoxItem>2</ComboBoxItem>
                                    <ComboBoxItem>3</ComboBoxItem>
                                    <ComboBoxItem>4</ComboBoxItem>
                                    <ComboBoxItem>5</ComboBoxItem>
                                    <ComboBoxItem>6</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Button Content="Добавить время в корзину" Click="BtnAddTime_Click" 
                        Margin="15,25" HorizontalAlignment="Center" FontSize="18"/>
            </StackPanel>

            <!-- Services View -->
            <StackPanel x:Name="pnlServices" Visibility="Collapsed">
                <Label Content="Дополнительные услуги" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Дополнительные услуги оплачиваются только наличными на кассе" 
               Margin="0,0,0,15" 
               FontSize="16"
               Foreground="{StaticResource TextColor}"
               HorizontalAlignment="Center"/>
                <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="10">
                    <DataGrid x:Name="dgServices" AutoGenerateColumns="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Название_Услуги}" Width="*"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Цена}" Width="100"/>
                            <DataGridTextColumn Header="Оплата" Binding="{Binding Оплата}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <Button Content="Добавить услуги в корзину" Click="BtnAddServices_Click" 
            Margin="15,25" HorizontalAlignment="Center" FontSize="18"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>