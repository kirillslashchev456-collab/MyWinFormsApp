<Window x:Class="WpfApp1.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Регистрация" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3F3F3F"/>
            <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="0 0 0 2"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Padding" Value="10,5,0,5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3F3F3F"/>
            <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="0 0 0 2"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Padding" Value="10,5,0,5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#512DA8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#673AB7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Image Source="/Assets/5fabe102cabcc704fc13e642_64954d975146a7.38485425.jpg" Stretch="UniformToFill">
            <Image.Effect>
                <BlurEffect Radius="10"/>
            </Image.Effect>
        </Image>

        <Border CornerRadius="15" Background="#283593" Opacity="0.9" 
                Width="450" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="40">
                <TextBlock Text="Регистрация" 
                           Foreground="White" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <TextBlock Text="Имя пользователя" Foreground="White" FontSize="16"/>
                <TextBox x:Name="txtUsername" Text="Username"/>

                <TextBlock Text="Пароль" Foreground="White" FontSize="16" Margin="0,15,0,0"/>
                <PasswordBox x:Name="txtPassword" PasswordChar="*"/>

                <Button x:Name="btnRegister" Content="Зарегистрироваться" 
                        Click="btnRegister_Click" 
                        Margin="0,30,0,0"/>

                <Button x:Name="btnLogin" Content="Уже есть аккаунт? Войти" 
                        Click="btnLogin_Click"
                        Background="Transparent"
                        BorderBrush="#512DA8"
                        BorderThickness="1"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Border>

        <Button Content="✕" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Width="40" 
                Height="40" 
                Click="ExitButton_Click" 
                Margin="0,20,20,0" 
                Background="Transparent" 
                BorderBrush="White" 
                Foreground="White"
                FontSize="20"
                FontWeight="Bold"/>
    </Grid>
</Window>