<Window x:Class="WpfApp1.PriseForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Прайс-лист" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Image Source="Assets/5fabe102cabcc704fc13e642_64954d975146a7.38485425.jpg" Stretch="UniformToFill">
            <Image.Effect>
                <BlurEffect Radius="5"/>
            </Image.Effect>
        </Image>

        <Border Background="#283593" CornerRadius="15" Opacity="0.85">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Прайс-лист" Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,20,0,30" 
                           FontFamily="Arial"
                           TextDecorations="Underline"/>

                <!-- Content -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              Grid.Row="1" 
                              Padding="10">
                    <ItemsControl x:Name="priceListItemsControl" 
                                 ItemsSource="{Binding PriceListItems}"
                                 FontSize="20">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FF673AB7" 
                                        BorderThickness="2" 
                                        CornerRadius="8" 
                                        Margin="8" 
                                        Padding="15" 
                                        Background="#2AFFFFFF">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding ServiceName}" 
                                                   Grid.Column="0" 
                                                   FontWeight="Bold" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="White"
                                                   FontSize="22"/>

                                        <TextBlock Text="{Binding Description}" 
                                                   Grid.Column="1" 
                                                   Margin="20,0,0,0" 
                                                   TextWrapping="Wrap" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="White"
                                                   FontSize="20"/>

                                        <TextBlock Text="{Binding Price, StringFormat=C, ConverterCulture=ru-RU}" 
                                                   Grid.Column="2" 
                                                   FontWeight="Bold" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="White"
                                                   FontSize="22"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Exit Button -->
                <Button x:Name="ExitButton" 
                        Content="Выход" 
                        Grid.Row="2" 
                        HorizontalAlignment="Right" 
                        Margin="0,30,0,20"
                        Width="180" 
                        Height="50" 
                        Click="ExitButton_Click" 
                        Background="#FF673AB7" 
                        Foreground="White" 
                        BorderBrush="Transparent"
                        FontSize="22"
                        FontWeight="Bold">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#40000000"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>