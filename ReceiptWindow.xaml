<Window x:Class="WpfApp1.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Чек об оплате" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="15" 
            Background="#1A0036" 
            BorderBrush="#4A148C" 
            BorderThickness="2"
            Margin="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#2D0D42" 
                    CornerRadius="13,13,0,0" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="K I B E R S  L O U N G E  P R O" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Чек об оплате" 
                               FontSize="20" 
                               Foreground="#E0D6ED"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding DateTime.Now, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                               FontSize="16" 
                               Foreground="#7A6B8A"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Receipt Details -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="20">
                <Border Background="#3A1A5A" 
                        CornerRadius="10" 
                        Padding="20">
                    <TextBlock Text="{Binding ReceiptDetails}" 
                               FontSize="18" 
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </Border>
            </ScrollViewer>

            <!-- Total and Close Button -->
            <Border Grid.Row="2" 
                    Background="#2D0D42" 
                    CornerRadius="0,0,13,13" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="{Binding TotalPrice, StringFormat='Итого: {0}'}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#8E44AD"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <Button Content="Закрыть" 
                            Click="CloseButton_Click"
                            Background="#6A0DAD" 
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Bold"
                            Padding="20,10"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                             ShadowDepth="0" 
                                             Color="#8E44AD"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>